#include <iostream>
#include <windows.h> // Потрібна для функції переключення кодової сторінки
#include <conio.h> // Потрібна для функції getch()
#include <string>  // Потрібна для строкового типу даних string
using namespace std; // Щоб не треба було писати в коді завжди: std::cin..., std::cout..., std::string...
                     // Але якщо за текстом десь буде вказано явно - це не буде викликати помилку
#pragma hdrstop
#pragma argsused

#ifdef _WIN32
#include <tchar.h>
#else
  typedef char _TCHAR;
  #define _tmain main
#endif

#include <stdio.h>

int _tmain(int argc, _TCHAR* argv[]) 
{
	SetConsoleOutputCP(1251); // для коректного відображення символів кириллиці при виведенні

	int varinteger;
	std::string varstring;
	float varfloat;

	// приклади введення-виведення даних
	cout<<"Задайте значення целичисельної змінної: ";
	cin>>varinteger;
	cout<<"Задайте значення строкової змінної: ";
	cin>>varstring;
	cout<<"Задайте значення істотної змінної (з \"плаваючою\" точкою): "; /* зверніть увагу на необхідність використання символів \
																				  для "блокування" синтаксичної дії лапків */
	std::cin>>varstring;

	// приклади відображення введенних даних
	cout<<"\nЗначення змінної varinteger = " << varinteger;  //службовий символ \n використаний для переходу на нову строку (буде пропуск строки)


	getch();
	return 0;
}
